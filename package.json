{
  "name": "gist-musicbox",
  "version": "0.1.0",
  "description": "Updates a given GitHub Gist with your music statistics.",
  "main": "src/index.ts",
  "repository": "https://github.com/bddvlpr/gist-musicbox",
  "author": "Luna Simons <luna@bddvlpr.com>",
  "license": "BSD-3-Clause",
  "private": true,
  "scripts": {
    "build": "tsc",
